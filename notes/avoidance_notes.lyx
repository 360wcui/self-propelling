\end_layout

\begin_layout Standard
The value function 
\begin_inset Formula $V_{A}\left(t,z\right)$
\end_inset

 is the viscosity solution of the HJ partial differential equation
\end_layout

\begin_layout Standard
\begin_inset Formula $H\left(s,z,\lambda\right)=\underset{u\in U}{max}\,\underset{d\in D}{min}\,\lambdaÂ·f\left(z,u,d\right)$
\end_inset

,
\end_layout

\begin_layout Standard
\begin_inset Formula $V_{A}=\underset{\gamma\left[u\right]\left(\cdot\right)\in\Gamma\left(t\right)}{inf}\underset{u\left(\cdot\right)\in\mathbb{U}}{sup}\underset{s\in\left[t,0\right]}{min}V_{0}\left(\zeta\left(0;z,t,u\left(\cdot\right),\gamma\left[u\right]\left(\cdot\right)\right)\right)$
\end_inset


